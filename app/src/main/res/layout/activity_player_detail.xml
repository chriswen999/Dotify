<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.PlayerDetailActivity">

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:backgroundTint="#3F51B5"
        android:text="SETTINGS"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/albumPic"
        app:layout_constraintEnd_toEndOf="@+id/albumPic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/albumPic"
        android:layout_width="373dp"
        android:layout_height="373dp"
        android:background="@color/black"
        android:src="@drawable/strangers_cover_art"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178" />

    <ImageButton
        android:id="@+id/ic_play"
        android:layout_width="91dp"
        android:layout_height="94dp"
        android:background="@android:color/transparent"
        android:foreground="?selectableItemBackground"
        android:onClick="playClick"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayNum"
        app:layout_constraintVertical_bias="0.224" />

    <ImageButton
        android:id="@+id/ic_next"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:background="@android:color/transparent"
        android:foreground="?selectableItemBackground"
        android:onClick="nextClick"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toEndOf="@+id/ic_play"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayNum"
        app:layout_constraintVertical_bias="0.315" />

    <ImageButton
        android:id="@+id/ic_previous"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:background="@android:color/transparent"
        android:foreground="?selectableItemBackground"
        android:onClick="prevClick"
        android:src="@drawable/ic_previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ic_play"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayNum"
        app:layout_constraintVertical_bias="0.315" />

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="175dp"
        android:text="Strangers"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albumPic" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Seven Lions featuring Tove Lo, Myon, shashashasha"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songName"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/tvPlayNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021303 plays"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artistName"
        app:layout_constraintVertical_bias="0.058"  />

</androidx.constraintlayout.widget.ConstraintLayout>